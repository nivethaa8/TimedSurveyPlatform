<% include ../partials/header.ejs %>

<main class="container">
    <!-- Message Area -->
    <% if(messages.length > 0) {%>
        <div class="alert alert-danger">
            <%= messages %>
        </div>
    <% } %>

    <div class="row">
        <div class="col-md-offset-3 col-md-6 whiteBackground">
            <h3 class="pageHeading">Login</h3>
            <form method="POST" autocomplete="off">
                <fieldset class="form-group">
                    <label for="username" class="darkLabel">Username</label>
                    <input type="text" class="form-control"
                    name="username" placeholder="Enter username"
                    id="username" required autofocus>
                </fieldset>

                <fieldset class="form-group">
                    <label for="password" class="darkLabel">Password</label>
                    <input type="password" class="form-control"
                    name="password" placeholder="Enter password"
                    id="password" required>
                    or
                    <a href="/register">Register Here</a>
                </fieldset>

                <fieldset class="form-group text-right">
                    <input type="submit" class="greenButton" value="Login">
                    <a href="/"> <input type="button" class="cancelButton" value="Cancel"> </a>
                </fieldset>

            </form>
        </div>
    </div>

</main>

<% include ../partials/footer.ejs %>